<h1>Editing: <%= room_number_format(@room) %></h1>

<%= form_for @room do |f| %>
	<p>
		<%= f.label :studio_number %><br/>
		<%= f.select :studio_number, 1..30, prompt: "Pick one" %>
	</p>

	<p>
		<%= f.label :occupancy_status %><br/>
		<%= f.select :occupancy_status, Room.occupancy_statuses.keys.to_a, prompt: "Pick one" %>
	</p>

	<p>
		<%= f.label :availability_status %><br/>
		<%= f.select :availability_status, Room.availability_statuses.keys.to_a, prompt: "Pick one" %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to("Cancel Editing", room_path(@room)) %>